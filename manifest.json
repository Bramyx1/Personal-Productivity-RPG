{
  "manifest_version": 3,
  "name": "Blackboard Course Intel",
  "description": "Scan Blackboard assignments, score urgency, and sync to an RPG app.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://bramyx1.github.io/Personal-Productivity-RPG/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Blackboard Course Intel"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://bramyx1.github.io/Personal-Productivity-RPG/*"
      ],
      "js": [
        "rpgBridge.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
